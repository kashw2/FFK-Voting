{
  "name": "@kashw2/lib-server",
  "version": "4.0.1",
  "description": "Fleet of the Faithful Knights Serverside Library",
  "main": "./dist/main/index.js",
  "typings": "./dist/main/index.d.ts",
  "module": "./dist/module/index.js",
  "repository": "https://github.com/kashw2/Fleet-of-the-Faithful-Knights.git",
  "homepage": "https://github.com/kashw2/Fleet-of-the-Faithful-Knights#readme",
  "bugs": {
    "url": "https://github.com/kashw2/Fleet-of-the-Faithful-Knights/issues"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/kashw2",
    "access": "restricted",
    "directory": "dist"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "watch:build": "tsc -p tsconfig.json -w",
    "test": "nyc --silent ava",
    "cov": "run-s build test cov:html cov:lcov cov:json test && run-s cov:send",
    "cov:ci": "run-s cov:html cov:lcov cov:json",
    "cov:show": "run-s build test cov:html && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:lcov": "nyc report --reporter=lcov",
    "cov:json": "nyc report --reporter=json",
    "cov:send": "run-s cov:lcov cov:json && codecov -t $CODECOV_TOKEN",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "npm run doc:html && open-cli dist/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out dist/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json dist/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"docs: update\" -d dist/docs"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "ava": "4.2.0",
    "@ava/typescript": "3.0.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "typedoc": "0.22.15"
  },
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "dist/main/"
      },
      "compile": false
    },
    "configurableModuleFormat": true,
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ],
    "files": [
      "!dist/module/**"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "tests",
      "**/*.spec.js"
    ]
  }
}
